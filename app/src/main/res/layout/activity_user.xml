<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jeramtough.niyouji.controller.activity.UserActivity"
        android:orientation="vertical">

    <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background7"
            android:text="退出登录"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center"
            android:paddingLeft="15dp"/>

    <Button
            android:id="@+id/button_owned_travelnotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background7"
            android:text="我的游记                          (功能建设中)"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center"
            android:paddingLeft="15dp"/>

    <Button
            android:id="@+id/button_personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background7"
            android:text="修改/查看个人资料      (功能建设中)"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center"
            android:paddingLeft="15dp"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background7"
            android:text="签到                                   (功能建设中)"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="left|center"
            android:paddingLeft="15dp"/>

</LinearLayout>
