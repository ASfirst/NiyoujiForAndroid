<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.jeramtough.niyouji.controller.activity.CreateTravelnoteActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background5">

    <com.jeramtough.jtandroid.ui.FullScreenVideoView
            android:id="@+id/videoView_travelnote_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_gravity="center"/>

    <ImageView
            android:id="@+id/imageView_travelnote_cover"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="开启您的游记直播之旅!"
                android:gravity="center"
                android:textColor="@color/blue"
                android:shadowColor="@color/white"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textSize="21sp"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center">

                <TextView
                        android:id="@+id/textView_tjyjfm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加游记封面"
                        android:textColor="@color/colorAccentDark"
                        android:shadowColor="@color/white"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"/>

                <ImageView
                        android:id="@+id/imageView_add_travelnote_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/plussign_white"/>

                <EditText
                        android:id="@+id/edit_travelnote_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="       请输入游记标题       "
                        android:textColor="@color/colorAccentDark"
                        android:textSize="23sp"
                        android:shadowColor="@color/white"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:maxLength="13"
                        />

            </LinearLayout>


        </FrameLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

            <Button
                    android:id="@+id/btn_start_performing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开启游记"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:layout_gravity="center|bottom"
                    android:background="@drawable/btn3"
                    android:textColor="@color/white"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"/>

        </RelativeLayout>


    </LinearLayout>


    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back"/>

    <LinearLayout
            android:id="@+id/layout_waiting_create_travelnote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center"
            android:orientation="vertical"
            android:alpha="0.7">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:text="正在创建游记\n与服务器连接中..."
                android:gravity="center"/>

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

    </LinearLayout>
</FrameLayout>